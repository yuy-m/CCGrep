#!/bin/bash

DPATH=${DPATH:-`dirname ${0}`}
JARNAME="CCGrep.jar"


if [ "$DPATH" == "/usr/local/bin" ]; then
  if [ -e "/usr/local/lib/ccgrep/$JARNAME" ] then
    java -jar "/usr/local/lib/ccgrep/$JARNAME" "$@"
    exit
  fi
fi

if [ -e "$DPATH/$JARNAME" ]; then
  java -jar "$DPATH/$JARNAME" "$@"
else
  echo "$JARNAME not found."
  exit 2
fi
