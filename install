#!/bin/bash

echo Not implemented yet.
exit

INSTPATH="/usr/local/lib/ccgrep/"
BINPATH="/usr/local/bin"

rm -rf "$INSTPATH"
rm "$BINPATH/ccgrep"

if [ "$1" != "clean" ]; then
    DPATH=${DPATH:-`dirname ${0}`}
    mkdir "$INSTPATH"
    cp "$DPATH/ccgrep" "$INSTPATH"
    cp "$DPATH/CCGrep.jar" "$INSTPATH"
    cp "$DPATH/install" "$INSTPATH"
    cp "$DPATH/LICENSE.txt" "$INSTPATH"
    cp "$DPATH/README.md" "$INSTPATH"
    cp "$DPATH/build.xml" "$INSTPATH"
    cp -r "$DPATH/lib/" "$INSTPATH"
    cp -r "$DPATH/src/" "$INSTPATH"
    cp "$DPATH/ccgrep" "$BINPATH"
fi
